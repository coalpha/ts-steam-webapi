{
   "include": ["src/**/*.ts"],
   "compilerOptions": {
      "strict": true,
      "lib": [
         "ES5",
         "ES2015",
         "ES2016",
         "ES2018",
         "ES2019",
         "ES2020",
      ],
      "target": "ES2019",

      "module": "esnext",
      "moduleResolution": "Node",
      "newLine": "lf",

      "rootDir": "src",

      "outDir": "bin",

      "sourceMap": true,
      "declaration": true,
   },
}
